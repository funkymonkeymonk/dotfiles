# ---------------------------------------------------------------------
# Aliases
# ---------------------------------------------------------------------
alias clear='echo USE CTRL + L'
alias lrat='ls -lrat'
alias m=make

# ---------------------------------------------------------------------
# Functions
# ---------------------------------------------------------------------
disk-usage() {
  path=${1-${PWD}}
  du -k $path | sort -n | perl -ne 'if ( /^(\d+)\s+(.*$)/){$l=log($1+.1);$m=int($l/log(1024)); printf  ("%6.1f\t%s\t%25s  %s\n",($1/(2**(10*$m))),(("K","M","G","T","P")[$m]),"*"x (1.5*$l),$2);}'
}
